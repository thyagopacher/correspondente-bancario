AddType text/cache-manifest .appcache

<IfModule mod_rewrite.c>
    RewriteEngine On

    RewriteRule ^/?$   visao/ [NC,L]
    RewriteRule ^login visao/login.php [NC,L]  
    RewriteRule ^home  visao/index.php [NC,L]  
    RewriteRule ^([a-z0-9]+)$ visao/$1.php [NC,L]
</IfModule> 

